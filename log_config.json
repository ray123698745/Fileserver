{
  "appenders": [
    {
      "type": "console"
    },
    {
      "type": "file",
      "filename": "logs/app.log",
      "maxLogSize": 100000,
      "backups": 10

    },
    {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": {
        "type": "file",
        "filename": "logs/errors.log",
        "maxLogSize": 100000,
        "backups": 5
      }
    }
  ]
}
